{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi-spacing": [
            "error", 
            {
                "before": false,
                "after": true
            }
        ],
        "keyword-spacing": [
            1, 
            {
                "before": true,
                "after": true
            }
        ],
        "space-infix-ops": [
            "error", 
            {"int32Hint": false}
        ]
    }
}